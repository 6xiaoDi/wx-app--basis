<view>
    <swiper  interval="3000" indicator-dots autoplay vertical="{{false}}" circular>
        <swiper-item>
            <image src="/images/bestplayers.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/lpl.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/0.jpg"></image>
        </swiper-item>
    </swiper>

    <block wx:for="{{postList}}">
        <view class="post-container">
            <view class="post-author-date">
                <image class="post-author" src="{{item.avatar}}"></image>
                <text class="post-date">{{item.date}}</text>
            </view>

            <text class="post-title">{{item.title}}</text>

            <image class="post-image" src="{{item.imgSrc}}"></image>

            <text class="post-content">{{item.content}}</text>

            <view class="post-like">
                <l-icon name="favor" size="28" color="#666" class="post-like-image"></l-icon>
                <text class="post-like-font">{{item.collection}}</text>
                <l-icon name="eye" size="32" color="#666" class="post-like-image"></l-icon>
                <text class="post-like-font">{{item.reading}}</text>
            </view>
        </view>
    </block>
</view>